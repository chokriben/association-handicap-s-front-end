{
  "$schema": "https://json.schemastore.org/jsconfig",
  "include": [
    "./vite.config.*",
    "./**/*",
    "./**/*.vue",
    "./themeConfig.js"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@layouts/*": ["./layouts/*"],
      "@core/*": ["./core/*"],
      "@images/*": ["./assets/images/*"],
      "@styles/*": ["./assets/styles/*"]
    },
    "types": [
      "vite/client",
      "vite-plugin-vue-layouts/client"
    ]
  }
}
